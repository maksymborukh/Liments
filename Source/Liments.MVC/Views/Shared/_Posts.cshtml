@using Liments.MVC.Models
@model IEnumerable<PostViewModel>


@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-2">
                        <a asp-controller="Profile" asp-action="Index" asp-route-user="@User.Identity.Name" class="card-link">
                            <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                        </a>
                    </div>
                    <div class="ml-2">
                        <div class="h5 m-0">
                            <a asp-controller="Profile" asp-action="Index" asp-route-user="@User.Identity.Name" class="card-link">
                                <p style="color:black">@item.Author</p>
                            </a>
                        </div>
                        @*<div class="h7 text-muted">@item.</div>*@
                    </div>
                </div>

                @*<div>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(39px, 38px, 0px);">
                            <div class="h6 dropdown-header">Configuration</div>
                            <a class="dropdown-item" href="#">Save</a>
                            <a class="dropdown-item" href="#">Hide</a>
                            <a class="dropdown-item" href="#">Report</a>
                        </div>
                    </div>
                </div>*@

            </div>

        </div>
        <div class="card-body">

            <div class="form-row">
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6">
                    <img class="rounded" style="width:100%" src="https://picsum.photos/50/50" alt="">
                </div>
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-6">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Content</p>
                </div>
            </div>

            <div class="text-muted h7 mt-2">@item.PostedAt</div>
        </div>
        <div class="card-footer">
            <div style="font-size: 24px;">
                <a asp-action="Like" asp-route-id="@item.Id" data-ajax="true" data-ajax-update="#Posts" class="card-link">
                    @if (item.Likes.Any(l => l.UserName == User.Identity.Name))
                    {
                        <i class="fas fa-heart"></i>
                    }
                    else
                    {
                        <i class="far fa-heart"></i>
                    }
                </a>
                <a href="@("#CommentDialog" + item.Id)" data-toggle="modal" class="card-link"><i class="fas fa-comment"></i></a>
                @*<a href="#" class="card-link"><i class="fas fa-share"></i></a>*@
            </div>
            @if (item.Likes.Count > 0)
            {
                <div class="mt-2">
                    <a href="@("#LikesDialog" + item.Id)" data-toggle="modal" class="card-link">
                        @item.Likes.Count likes
                    </a>
                </div>
                <div class="modal fade" id=@("LikesDialog" + item.Id) role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Likes</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                @foreach (var like in item.Likes)
                                {
                                    <div class="row ml-3 mb-3">
                                        <div class="col pl-0">
                                            <span>
                                                <a asp-controller="Profile" asp-action="Index" asp-route-user="@User.Identity.Name" class="card-link">
                                                    <img class="rounded-circle mr-2" width="45" src="https://picsum.photos/50/50" alt="">

                                                    <span style="color:black">@like.UserName</span>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (item.Comments.Count > 0)
            {
                <div class="mt-2">
                    <a href="@("#CommentDialog" + item.Id)" data-toggle="modal" class="card-link">
                        View all @item.Comments.Count comments
                    </a>
                </div>
            }
            <div class="modal fade" id=@("CommentDialog" + item.Id) role="dialog">
                <div class="modal-dialog modal-dialog-scrollable modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Comments</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            @foreach (var comment in item.Comments)
                            {
                                <div class="container ml-3 mb-4">
                                    <div class="row">
                                        <div class="col pl-0">
                                            <span>
                                                <a asp-controller="Profile" asp-action="Index" asp-route-user="@User.Identity.Name" class="card-link">
                                                    <img class="rounded-circle mr-2" width="45" src="https://picsum.photos/50/50" alt="">

                                                    <span style="color:black;font-weight:bold">@comment.Author:  </span>
                                                </a>
                                                <span>@comment.Content</span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col pl-0">
                                            <span>
                                                <small class="text-muted">@comment.PostedAt</small>
                                                @*<button type="button" class="close float-right">&times;</button>*@
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="modal-footer d-block">
                            <div class="container-fluid pr-0 pl-0">
                                <form asp-action="AddComment" asp-controller="Posts" asp-route-id="@item.Id" data-ajax="true" data-ajax-complete="refreshCommentDialog('@item.Id')" data-ajax-update="#Posts" >
                                    <div class="form-row">
                                        <div class="col-2 col-sm-2 col-md-2 col-lg-1">
                                            <img class="rounded-circle img-fluid" src="https://picsum.photos/50/50" alt="">
                                        </div>
                                        <div class="col-8 col-sm-8 col-md-8 col-lg-10">
                                            <textarea name="content" class="form-control" type="textarea" placeholder="Comment"></textarea>
                                        </div>
                                        <div class="col-2 col-sm-2 col-md-2 col-lg-1">
                                            <input type="submit" class="btn btn-primary btn-sm btn-block" value="Send"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>
    function refreshCommentDialog(postId) {
        $('#CommentDialog' + postId).modal('hide');
        $('.modal-backdrop').remove();
        $('#CommentDialog' + postId).modal();
}
</script>

